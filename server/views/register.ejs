
<%- include('./partials/head') %>
<%- include('./partials/header') %>

            <main>
                <section id="formulario">
                    <h1>Fa√ßa o seu cadastro</h1>
                    <% if(locals.message) { %>
                        <div class="alert alert-<% if(locals.error) { %>danger<% } else { %>success<% } %>" role="alert">
                        <%= message %>
