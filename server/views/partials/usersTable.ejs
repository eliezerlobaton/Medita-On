<article class="card">

  <div class="card__content-container">

    <table class="bg-light">

      <thead class="bg-tertiary-light">
        <tr>
          <th>ID</th>
          <th>Avatar</th>
          <th>Nome Completo</th>
          <th>Email</th>
          <th>Telefone</th>
          <th>Nascimento</th>
          <th>Controles</th>
        </tr>
      </thead>

      <tbody>

        <% for(let usuario of usuarios) { %>

        <tr>
          <td data-title="ID"><%= usuario.id || '0' %></td>
          <td data-title="Avatar">
            <% if(!usuario.avatar) { %>
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="var(--tertiary)">
                <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm7.753 18.305c-.261-.586-.789-.991-1.871-1.241-2.293-.529-4.428-.993-3.393-2.945 3.145-5.942.833-9.119-2.489-9.119-3.388 0-5.644 3.299-2.489 9.119 1.066 1.964-1.148 2.427-3.393 2.945-1.084.25-1.608.658-1.867 1.246-1.405-1.723-2.251-3.919-2.251-6.31 0-5.514 4.486-10 10-10s10 4.486 10 10c0 2.389-.845 4.583-2.247 6.305z" />
              </svg>
            <% } else { %>
            <img class="rounded" src="<%= usuario.avatar %>" alt="Avatar de <%= usuario.nome %> <%= usuario.sobrenome %>" width="48" height="48">
            <% } %>
          </td>
          <td data-title="Nome"><%= usuario.nome || '' %> <%= usuario.sobrenome || '' %></td>
          <td data-title="Email"><%= usuario.email || '' %></td>
          <td data-title="Telefone"><%= usuario.telefone || '' %></td>
          <td data-title="Nascimento"><%= new Date(usuario.nascimento).toLocaleDateString('pt-BR') || '' %></td>
          <td data-title="Controles">
            <div class="btn-group btn-group--center">
              <a href="/usuarios/<%= usuario.id %>" target="_blank" rel="noopener noreferrer" class="btn btn--tertiary" title="Ver perfil">&#128065;</a>
              <a href="/admin/usuarios/<%= usuario.id || 0 %>/editar" class="btn btn--primary" title="Editar perfil">&#9998;</a>
              <a href="/admin/usuarios/<%= usuario.id || 0 %>/excluir" class="btn btn--secondary btn--disabled" title="Excluir perfil" disabled>&#128465;</a>
            </div>
          </td>
        </tr>

        <% } %>

      </tbody>

    </table>

  </div>

</article>