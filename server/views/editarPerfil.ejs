<%- include('./partials/head') %> 
<%- include('./partials/header') %>
<section class="seccion-perfil-usuario">
  <div class="perfil-usuario-header">
    <div class="perfil-usuario-portada">
      <div class="perfil-usuario-avatar">
        <img src="/img/pic-1.png" alt="img-avatar" />
      </div>
      <button type="button" class="boton-portada">Cambiar fundo</button>
    </div>
  </div>
  <div class="perfil-usuario-body">
    <div class="perfil-usuario-bio">
      <h3 class="titulo"> <%= usuarioLogado.frist_name %>  <%= usuarioLogado.last_name %></h3>
      <p class="texto">
        Quando você quer alguma coisa, todo o universo conspira para que você
        realize o seu desejo.
      </p>
    </div>
  </div>
  <div class="container">
    <div class="contatoperfil">
      <div class="meucontato"></div>

      <h4 class="tituloh4">Eu sou <%= usuarioLogado.frist_name %></h4>

      <form action="editar" method="post">
        <input
          value="<%= usuarioLogado.frist_name %>"
          type="text"
          class="campo full"
          placeholder="Nome"
          name="frist_name"
        />
        <input
          value="<%= usuarioLogado.last_name %>"
          type="text"
          class="campo full"
          placeholder="Sobrenome"
          name="last_name"
        />
        <input
          value="<%= usuarioLogado.birth %>"
          type="text"
          class="campo full"
          placeholder="Aniversário"
          name="birth"
        />
        <input
          value="<%= usuarioLogado.email %>"
          type="text"
          class="campo"
          placeholder="Email"
          name="email"
        />
        <input
          value="<%= usuarioLogado.password %>"
          type="text"
          class="campo"
          placeholder="Senha"
          name="password"
        />
        <button class="btn" type="submit">Enviar</button>
      </form>
    </div>
  </div>
</section>
<%- include('./partials/footer') %>
